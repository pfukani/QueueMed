<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_heart"
            android:layout_marginBottom="24dp"
            android:contentDescription="Profile Image" />

        <!-- Profile Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Profile"
            android:textColor="#FF0000"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp" />

        <!-- Profile Info Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1E1E1E"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:elevation="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:clipToPadding="false">

            <!-- User Name -->
            <TextView
                android:id="@+id/tvProfileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: "
                android:textColor="#CCCCCC"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <!-- User Surname -->
            <TextView
                android:id="@+id/tvProfileSurname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Surname: "
                android:textColor="#CCCCCC"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <!-- ID Number -->
            <TextView
                android:id="@+id/tvProfileIdNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID Number: "
                android:textColor="#CCCCCC"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <!-- Sex -->
            <TextView
                android:id="@+id/tvProfileSex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sex: "
                android:textColor="#CCCCCC"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <!-- Age -->
            <TextView
                android:id="@+id/tvProfileAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age: "
                android:textColor="#CCCCCC"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <!-- Contact -->
            <TextView
                android:id="@+id/tvProfileContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact: "
                android:textColor="#CCCCCC"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <!-- Race -->
            <TextView
                android:id="@+id/tvProfileRace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Race: "
                android:textColor="#CCCCCC"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <!-- Language -->
            <TextView
                android:id="@+id/tvProfileLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Language: "
                android:textColor="#CCCCCC"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <!-- Email -->
            <TextView
                android:id="@+id/tvProfileEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: "
                android:textColor="#CCCCCC"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

        </LinearLayout>

        <!-- Edit Profile Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEditProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF0000"
            android:elevation="4dp"
            android:text="Edit Profile"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:cornerRadius="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Logout Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF4444"
            android:elevation="4dp"
            android:text="Logout"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:cornerRadius="16dp" />

    </LinearLayout>
</ScrollView>