<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="16dp"
    tools:context=".fragments.VitalsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Shimmer Loading -->
        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:shimmer_auto_start="true"
            app:shimmer_duration="1000"
            android:layout_marginBottom="16dp">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginBottom="12dp"
                    android:background="#2A2A2A" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginBottom="12dp"
                    android:background="#2A2A2A" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginBottom="12dp"
                    android:background="#2A2A2A" />
            </LinearLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>

        <!-- Actual Content Layout -->
        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Blood Pressure Card -->
            <LinearLayout
                android:id="@+id/cardBP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@drawable/bg_card_dark"
                android:elevation="6dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/ivHeartIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_heart_rate"
                    app:tint="#FF6B6B" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Blood Pressure"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#B0B0B0" />

                    <TextView
                        android:id="@+id/tvBloodPressure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--/-- mmHg"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />
                </LinearLayout>
            </LinearLayout>

            <!-- Temperature Card -->
            <LinearLayout
                android:id="@+id/cardTemp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@drawable/bg_card_dark"
                android:elevation="6dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/ivTempIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_thermometer"
                    app:tint="#4FC3F7" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temperature"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#B0B0B0" />

                    <TextView
                        android:id="@+id/tvTemperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-- Â°C"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />
                </LinearLayout>
            </LinearLayout>

            <!-- Pulse Card -->
            <LinearLayout
                android:id="@+id/cardPulse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@drawable/bg_card_dark"
                android:elevation="6dp"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:id="@+id/ivPulseIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_pulse"
                    app:tint="#81C784" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pulse Rate"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#B0B0B0" />

                    <TextView
                        android:id="@+id/tvPulse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-- bpm"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />
                </LinearLayout>
            </LinearLayout>

            <!-- Last Updated -->
            <TextView
                android:id="@+id/tvTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Updated: --"
                android:textSize="14sp"
                android:textColor="#A0A0A0"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
