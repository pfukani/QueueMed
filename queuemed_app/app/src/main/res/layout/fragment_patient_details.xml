<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card_dark"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvPatientName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Patient Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#D9D9D9"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvPatientEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="patient@example.com"
            android:textColor="#A0A0A0"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etBloodPressure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Blood Pressure (e.g. 120/80)"
            android:inputType="text"
            android:textColor="#FFFFFF"
            android:textColorHint="#808080"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etTemperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Temperature (Â°C)"
            android:inputType="numberDecimal"
            android:textColor="#FFFFFF"
            android:textColorHint="#808080"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etPulse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pulse Rate (bpm)"
            android:inputType="number"
            android:textColor="#FFFFFF"
            android:textColorHint="#808080"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Additional Notes"
            android:minLines="3"
            android:gravity="top"
            android:textColor="#FFFFFF"
            android:textColorHint="#808080"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnSaveVitals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Vitals"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnMarkCompleted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mark as Completed"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btnViewHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View History"
            android:backgroundTint="#9C27B0"
            android:textColor="#FFFFFF"
            android:layout_marginTop="12dp"/>


    </LinearLayout>
</ScrollView>
